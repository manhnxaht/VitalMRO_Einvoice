<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="api_config_view_form" model="ir.ui.view">
        <field name="name">api.myinvoice.config.view.form</field>
        <field name="model">api.myinvoice.config</field>
        <field name="arch" type="xml">
            <form string="">
                <header>
                    <button name="action_get_access_token" class="oe_highlight" string="Get Access Token" type="object"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" required="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="client_id" required="1" password="True"/>
                            <field name="client_secret" required="1" password="True"/>
                            <field name="company_id" required="1"/>
                        </group>
                        <group>
                            <field name="is_active" />
                            <field name="recall_times" />
                            <field name="during_times" widget="float_time"/>
                        </group>
                    </group>
                    <group>
                        <field name="access_token" readonly="1"/>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="api_config_view_tree" model="ir.ui.view">
        <field name="name">api.myinvoice.config.view.tree</field>
        <field name="model">api.myinvoice.config</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="client_id" />
                <field name="client_secret" />
                <field name="company_id" />
            </tree>
        </field>
    </record>
    <record id="api_config_action_server" model="ir.actions.act_window">
        <field name="name">API Config</field>
        <field name="res_model">api.myinvoice.config</field>
        <!-- <field name="view_type">form</field> -->
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
