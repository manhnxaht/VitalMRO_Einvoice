<odoo>
    <data noupdate="0">
        <record id="email_template_e_invoice" model="mail.template">
            <field name="name">E-Invoice Email</field>
            <field name="email_from">${(object.company_id.email or 'noreply@yourcompany.com')|safe}</field>
            <field name="email_to">${(object.partner_id.email)|safe}</field>
            <field name="subject">Your E-Invoice for Order</field>
            <field name="model_id" ref="account.model_account_move"/>
            <field name="body_html">
                <![CDATA[
                <p>Dear ${object.partner_id.name},</p>
                <p>We are pleased to inform you that your e-invoice for order #${object.name} is now available.</p>
                <p><b>Invoice Details:</b></p>
                <table style="width:100%; border: 1px solid black;">
                    <tr>
                        <th style="text-align: left; border: 1px solid; padding-left: 5px;">Invoice Number:</th>
                        <td style="text-align: left; border: 1px solid; padding-left: 5px;">${object.name}</td>
                    </tr>
                    <tr>
                        <th style="text-align: left; border: 1px solid; padding-left: 5px;">Invoice Date:</th>
                        <td style="text-align: left; border: 1px solid; padding-left: 5px;">${object.get_user_friendly_datetime(object.invoice_date)}</td>
                    </tr>
                    <tr>
                        <th style="text-align: left; border: 1px solid; padding-left: 5px;">Customer Name:</th>
                        <td style="text-align: left; border: 1px solid; padding-left: 5px;">${object.partner_id.name}</td>
                    </tr>
                    <tr>
                        <th style="text-align: left; border: 1px solid; padding-left: 5px;">Customer TIN:</th>
                        <td style="text-align: left; border: 1px solid; padding-left: 5px;">${object.partner_id.vat}</td>
                    </tr>
                    </tr>
                    <tr>
                        <th style="text-align: left; border: 1px solid; padding-left: 5px;">Total Payable Amount:</th>
                        <td style="text-align: left; border: 1px solid; padding-left: 5px;">${object.amount_total}</td>
                    </tr>
                </table>
                <br/>
                <p><b>View and Download Your E-Invoice:</b></p>
                <ol>
                    <li>Clicking on the following link:
                        <a href="${object.x_my_einvoice_link_to_portal}" target="_blank"> [Link to E-Invoice]</a>
                    </li>
                </ol>
                <p>If you have any questions or require further assistance, please do not hesitate to contact our customer support team at ${object.company_id.name}.</p>
                <p>Thank you for choosing ${object.company_id.name}.</p>
                <p>Sincerely,</p>
                 <p>${user.name}</p>
                <p>${object.company_id.name}</p>
                ]]>
            </field>
        </record>
    </data>

</odoo>
