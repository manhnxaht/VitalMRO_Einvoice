<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Tree view for Debit Notes -->
    <record id="view_account_move_bill_credit_note_list" model="ir.ui.view">
        <field name="name">account.move.bill.credit.note.list</field>
        <field name="model">account.move</field>
        <field name="arch" type="xml">
            <tree string="Self-bill Credit Notes">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="invoice_date"/>
                <field name="amount_total"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Action filtering on type_bill -->
    <record id="action_account_move_bill_credit_note" model="ir.actions.act_window">
        <field name="name">Self Bill Credit Notes</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_account_move_bill_credit_note_list"/>
        <field name="domain">[('x_type','=','self-bill-credit-note')]</field>
    </record>

    <!-- Menu under Accounting â†’ Customers -->
    <menuitem
            id="menu_account_move_bill_credit_note"
            name="Self-billed Credit Notes"
            parent="account.menu_finance_payables"
            action="action_account_move_bill_credit_note"
            sequence="10"/>
</odoo>