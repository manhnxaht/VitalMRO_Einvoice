<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <!-- Tree view for refund Notes -->
  <record id="view_account_move_bill_refund_note_list" model="ir.ui.view">
    <field name="name">account.move.bill.refund.note.list</field>
    <field name="model">account.move</field>
    <field name="arch" type="xml">
      <tree string="Self-bill Refund Notes">
        <field name="name" />
        <field name="partner_id" />
        <field name="invoice_date" />
        <field name="amount_total" />
        <field name="state" />
      </tree>
    </field>
  </record>

  <!-- Action filtering on type_bill -->
  <record id="action_account_move_bill_refund_note" model="ir.actions.act_window">
    <field name="name">Self Bill Refund Notes</field>
    <field name="res_model">account.move</field>
    <field name="view_mode">tree,form</field>
    <field name="view_id" ref="view_account_move_bill_refund_note_list" />
    <field name="domain">[('x_type','=','self-bill-refund-note')]</field>
  </record>

  <!-- Menu under Accounting â†’ Customers -->
  <menuitem
    id="menu_account_move_bill_refund_note"
    name="Self-billed Refund Notes"
    parent="account.menu_finance_payables"
    action="action_account_move_bill_refund_note"
    sequence="10" />
</odoo>