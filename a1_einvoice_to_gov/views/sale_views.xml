<odoo>
    <!-- POS Orders to Consolidate Invocie action -->
    <record id="action_consolidate_invoice" model="ir.actions.act_window">
        <field name="name">POS Orders</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sale.order</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'create': False}</field>
        <field name="domain">
            [('invoice_status','=','to invoice'), ('x_is_pos_order', '=', True)]
        </field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            No POS orders found
            </p><p>
            You can select all orders and invoice them in batch,<br/>
            or check every order and invoice them one by one.
            </p>
        </field>
    </record>
    
    <!-- POS Orders action -->
    <record id="action_sale_pos_orders" model="ir.actions.act_window">
            <field name="name">POS Orders</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sale.order</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'create': False}</field>
            <field name="domain">
                [('x_is_pos_order', '=', True), ('state', 'not in', ('draft', 'sent', 'cancel'))]
            </field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new POS order!
                </p>
            </field>
    </record>
    
    <!-- To make POS Orders only can appear in Consolidated Invoice menu -->
    <record id="sale.action_orders_to_invoice" model="ir.actions.act_window">
        <field name="domain">
            [('x_is_pos_order', '=', False), ('invoice_status', '=', 'to invoice')]
        </field>
    </record>
    
    <!-- To make POS Orders only can appear in Consolidated Invoice menu -->
    <record id="sale.action_orders" model="ir.actions.act_window">
        <field name="domain">
            [('x_is_pos_order', '=', False), ('state', 'not in', ('draft', 'sent', 'cancel'))]
        </field>
    </record>

    <!-- To make POS Orders only can appear in Consolidated Invoice menu -->
    <record id="sale.action_quotations_with_onboarding" model="ir.actions.act_window">
        <field name="domain">[('x_is_pos_order', '=', False)]</field>
    </record>

    <menuitem id="menu_consolidate_invoice"
            name="POS to Consolidate Invoice"
            action="action_consolidate_invoice"
            parent="sale.menu_sale_invoicing"
            sequence="2"/>
        
    <menuitem id="menu_sale_pos_orders"
            name="POS Orders"
            action="action_sale_pos_orders"
            parent="sale.sale_order_menu"/>
</odoo>