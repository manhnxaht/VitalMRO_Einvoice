<odoo>
    <record id="view_adjustment_bill_wizard" model="ir.ui.view">
        <field name="name">view_adjustment_bill_wizard</field>
        <field name="model">adjustment.bill</field>
        <field name="arch" type="xml">
            <form string="Adjustment Bill">
                <sheet>
                    <group>
                        <field name="type_bill" required="1" widget="radio"/>
                    </group>
                </sheet>
                <footer>
                    <button string="Create" type="object" name="action_create_bill"
                        class="btn-primary" />
                    <button special="cancel" string="Close" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_adjustment_bill" model="ir.actions.act_window">
        <field name="name">Adjustment Bill</field>
        <field name="res_model">adjustment.bill</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context"/>
    </record>
</odoo>
