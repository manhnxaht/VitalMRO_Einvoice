<odoo>
    <record id="view_adjustment_invoice_wizard" model="ir.ui.view">
        <field name="name">view_adjustment_invoice_wizard</field>
        <field name="model">adjustment.invoice</field>
        <field name="arch" type="xml">
            <form string="Adjustment Invoice">
                <sheet>
                    <group>
                        <field name="type_invoice" required="1" widget="radio"/>
                    </group>
                </sheet>
                <footer>
                    <button string="Create" type="object" name="action_create_invoice"
                        class="btn-primary" />
                    <button special="cancel" string="Close" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_adjustment_invoice" model="ir.actions.act_window">
        <field name="name">Adjustment Invoice</field>
        <field name="res_model">adjustment.invoice</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context"/>
    </record>
</odoo>
