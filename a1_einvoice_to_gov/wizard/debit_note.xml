<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <!-- Tree view for Debit Notes -->
  <record id="view_account_move_debit_note_tree" model="ir.ui.view">
    <field name="name">account.move.debit.note.tree</field>
    <field name="model">account.move</field>
    <field name="arch" type="xml">
      <tree string="Debit Notes">
        <field name="name"/>
        <field name="partner_id"/>
        <field name="invoice_date"/>
        <field name="amount_total"/>
        <field name="state"/>
      </tree>
    </field>
  </record>

  <!-- Action filtering on type_bill -->
  <record id="action_account_move_debit_note" model="ir.actions.act_window">
    <field name="name">Debit Notes</field>
    <field name="res_model">account.move</field>
    <field name="view_mode">tree,form</field>
    <field name="view_id" ref="view_account_move_debit_note_tree"/>
    <field name="domain">[('x_type','=','debit-note')]</field>
  </record>

  <!-- Menu under Accounting â†’ Customers -->
  <menuitem
    id="menu_account_move_debit_note"
    name="Debit Notes"
    parent="account.menu_finance_receivables"
    action="action_account_move_debit_note"
    sequence="10"/>
</odoo>
