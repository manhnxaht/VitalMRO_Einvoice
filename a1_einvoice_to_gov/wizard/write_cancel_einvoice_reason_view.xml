<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="cancel_einvoice_view_form" model="ir.ui.view">
            <field name="name">cancel_einvoice_view_form</field>
            <field name="model">write.cancel.einvoice.reason</field>
            <field name="arch" type="xml">
                <form string="Cancel E-Invoice Reason">
                    <sheet>
                        <group>
                            <field name="cancel_reason" string="Reason" required="1"/>
                        </group>
                    </sheet>
                    <footer>
                        <button name="action_confirm_cancel_einvoice" string="Confirm" type="object" default_focus="1" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="action_write_cancel_einvoice_reason" model="ir.actions.act_window">
            <field name="name">Cancel E-Invoice Reason</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">write.cancel.einvoice.reason</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="cancel_einvoice_view_form"/>
            <field name="target">new</field>
        </record>
    </data>
</odoo>
